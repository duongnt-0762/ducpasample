<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', object: @user %>
<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>
<%= f.label :dob,"Date of Birh"%>
<%= f.date_field :dob, class: 'form-control' %>
<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>
<%= f.label :address,"Address" %>
<%= f.text_field :address, class: 'form-control' %>
<%= f.label :password %>
<%= f.password_field :password, class: 'form-control' %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, class: 'form-control' %>
<%= f.label :gender %>
<table>
    <tr><td width = "50px"><%= f.radio_button :gender,1, class: 'form-control' %></td>
    <td>Male</td></tr>
    <tr><td><%= f.radio_button :gender,2, class: 'form-control' %></td>
    <td>Female</td></tr>
    <tr><td><%= f.radio_button :gender,3, class: 'form-control' %></td>
    <td>Other</td></tr>
</table>
<%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>